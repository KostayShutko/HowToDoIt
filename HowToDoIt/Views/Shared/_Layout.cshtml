<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/Content/dark.css">
    <link rel="stylesheet" href="~/Content/StyleLayout.css">
    <link rel="stylesheet" href="~/Content/font-awesome.css">
    <link rel="stylesheet" href="~/Content/bootstrap-social.css">
    <title>@ViewBag.Title – приложение ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
     
</head>
<body>
    <nav class="navbar proxy-navbar navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header" id="HeaderOnIndex">
                @Html.ActionLink("HOW TO DO", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div> 
            @Html.Partial("_LanguagePartial")
            @Html.Partial("_LoginPartial")
            @Html.Partial("_SearchPartial")
        </div>
        </nav>
        <div id="main-container" class="container body-content">
            @RenderBody()
            <hr />
        </div>
    <div style="display:inline-block; position:absolute; left:86%; width:14%; padding-top:10px; padding-right:10px;">
        @Html.Partial("_AddInstructionButtonPartial")
    </div>
        


        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>

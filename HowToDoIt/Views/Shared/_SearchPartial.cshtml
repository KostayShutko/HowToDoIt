

@using (Html.BeginForm("SearchInstruction", "Instructions", FormMethod.Post, new { @class = "navbar-form navbar-right" }))
{
    <div class="input-group">
        <input type="text" class="form-control" name="query" placeholder="@Res.ResourceIndex.Search">
        <div class="input-group-btn">
            <button class="btn btn-default" type="submit">
                <i class="glyphicon glyphicon-search"></i>
            </button>
        </div>
    </div>
}


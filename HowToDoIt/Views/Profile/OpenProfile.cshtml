@model HowToDoIt.Models.Classes_for_Db.Profil
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel='stylesheet' href='~/Content/InstructionButton/StyleFromGit.css'>

<h1 class="elem-in-center margin-bottom-30">@Res.ResourceProfile.PersonalInfo</h1>
<form class="form-horizontal" role="form">
    <div class="form-group">
        <label class="col-md-2 col-md-offset-1 field">@Res.ResourceProfile.Avatar</label>
        <div >
            <div class="profile">
                <div class="profile-avatar-wrap">
                    <img style="border-radius:5px;" id="profile-avatar" src="@Url.Content(Model.Avatar)" alt="Image for Profile">
                    <input type="hidden" id="info" name="info" value="@Model.Id">
                </div>
            </div>
        </div>
    </div>

    <div class="form-group">
        <label  class="col-md-2 col-md-offset-1 field">@Res.ResourceProfile.FirstName:</label>
        <label class="field-name" >@Model.FirtstName</label>
    </div>
    <div class="form-group">
        <label class="col-md-2 col-md-offset-1 field">@Res.ResourceProfile.LastName:</label>
        <label class="field-name">@Model.LastName</label>
    </div>
    <div class="form-group">
        <label class="col-md-2 col-md-offset-1 field">@Res.ResourceProfile.Sex:</label>
        @if (Model.Sex == "man")
        {
            <label class="field-name">@Res.ResourceProfile.Man</label>
        }
        else
        {
            <label class="field-name">@Res.ResourceProfile.Woman</label>
        }
    </div>
    <div class="form-group">
        <label class="col-md-2 col-md-offset-1 field">@Res.ResourceProfile.City:</label>
        <label class="field-name">@Model.City</label>
    </div>
    <div class="form-group">
        <label class="col-md-2 col-md-offset-1 field">@Res.ResourceProfile.Contacts:</label>
        <label class="field-name">@Model.Contacts</label>
    </div>
    <div class="form-group margin-bottom-100">
        <label class="col-md-2 col-md-offset-1 field">@Res.ResourceProfile.Interests:</label>
        <label class="field-name">@Model.Interests</label>
    </div>
</form>